@model ErrorViewModel
@{
    ViewData["Title"] = "Ocorreu um erro";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">Um erro ocorreu enquanto precessava sua requisicao.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}
@if (Model == null)
{
    <div>
        <h2>Ooops! Ocorreu um erro, mas não se preocupe. Nosso time será avisado e iremos corrigir em breve!</h2>
    </div>
}
else
{
    <h1>@Html.Raw(Model.Title)</h1>
    <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
}